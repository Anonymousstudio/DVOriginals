# Database
DATABASE_URL="postgresql://user:password@localhost:5432/pod_ecommerce?schema=public"
# For development, you can use SQLite:
# DATABASE_URL="file:./dev.db"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:4000"
API_PORT=4000

# Razorpay
RAZORPAY_KEY_ID="rzp_test_xxxxxxxx"
RAZORPAY_KEY_SECRET="xxxxxxxx"
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_xxxxxxxx"

# Provider API Keys (encrypted at rest)
PRINTROVE_API_KEY="your-printrove-api-key"
PRINTFUL_API_KEY="your-printful-api-key"
PRINTIFY_API_KEY="your-printify-api-key"
PRINTIFY_SHOP_ID="your-printify-shop-id"

# Google Analytics
GA_MEASUREMENT_ID="G-XXXXXXXXXX"
GA_API_SECRET="your-ga-api-secret"
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# S3 Compatible Storage
S3_ENDPOINT="https://your-s3-endpoint.com"
S3_BUCKET="pod-images"
S3_ACCESS_KEY="your-access-key"
S3_SECRET_KEY="your-secret-key"
S3_REGION="us-east-1"

# Email (for transactional emails)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Security
JWT_SECRET="your-jwt-secret"
ENCRYPTION_KEY="your-32-char-encryption-key"

# Admin Settings
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="admin123"

# Development
NODE_ENV="development"